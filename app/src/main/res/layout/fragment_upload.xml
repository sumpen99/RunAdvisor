<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/uploadLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/cityText"
        android:layout_width="225dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Enter City"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/streetText"
        android:layout_width="225dp"
        android:layout_height="70dp"
        android:layout_below="@id/cityText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Enter Street"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cityText" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView"
        android:layout_width="246dp"
        android:layout_height="178dp"
        android:src="@drawable/ic_image_placeholder_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/streetText"
        app:layout_constraintVertical_bias="0.143" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/uploadItemBtn"
        android:layout_width="171dp"
        android:layout_height="72dp"
        android:layout_below="@id/streetText"
        android:layout_alignStart="@id/streetText"
        android:background="@drawable/button"
        android:text="Upload Item"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toEndOf="@+id/loadImageBtn"
        app:layout_constraintTop_toBottomOf="@+id/streetText"
        app:layout_constraintVertical_bias="0.687" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loadImageBtn"
        android:layout_width="171dp"
        android:layout_height="72dp"
        android:layout_below="@id/streetText"
        android:layout_alignStart="@id/streetText"
        android:background="@drawable/button"
        android:text="Load Image"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/streetText"
        app:layout_constraintVertical_bias="0.687" />

</androidx.constraintlayout.widget.ConstraintLayout>